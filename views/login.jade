extends template
block content
  if message
    h2=message
  form(method='POST')
    .form-group
      label(for='email') Email
      input#email(type='email', name='email', autofocus, required)
    .form-group
      label(for='pass') Password
      input#pass(type='password', name='password', required)
    .form-group
      input.btn.btn-default(type='submit', value='Login')

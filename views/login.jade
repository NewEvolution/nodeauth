extends template
block content
  each msgs, type in messages
    for msg in msgs
      h3(class='bg-#{type}')=msg
  form(method='POST')
    .form-group
      label(for='email') Email
      input#email.form-control(type='email', name='email', autofocus, required)
    .form-group
      label(for='pass') Password
      input#pass.form-control(type='password', name='password', required)
    .form-group
      input.btn.btn-default.form-control(type='submit', value='Login')
